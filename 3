using System;

namespace Practica6_3
{

    // Crear tres clases ClaseA, ClaseB, ClaseC que ClaseB herede de ClaseA y ClaseC herede de ClaseB. 
    // Definir un constructor a cada clase que muestre un mensaje. Luego definir un objeto de la clase ClaseC.

    public class CLASEA
    {
        public CLASEA()
        {
            Console.WriteLine("\n" + "MENSAJE DE CLASE A");
        }
    }

    public class CLASEB : CLASEA
    {
        public CLASEB()
        {
            Console.WriteLine("\n" + "MENSAJE DE CLASE B");
        }
    }

    class CLASEC : CLASEB
    {

        public CLASEC()
        {
            Console.WriteLine("\n" + "MENSAJE DE CLASE C");
        }
        static void Main(string[] args)
        {
            Console.Clear();

            CLASEC imprimir = new CLASEC();

            Console.ReadKey();
        }
    }
}
